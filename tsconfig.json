{
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "rootDir": "src",
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "jsx": "react-native",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "include": [
        "src"
    ]
}